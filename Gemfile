source "https://rubygems.org"

# Jekyll 4.x supports Ruby 3.2+
gem "jekyll", "~> 4.3"
gem "minimal-mistakes-jekyll"
gem "tzinfo-data"
gem "webrick", "~> 1.7"

# Plugins
group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jekyll-feed", "~> 0.12"
  gem "jemoji"
  gem "jekyll-include-cache"
  gem "jekyll-algolia"
  gem "jekyll-remote-theme"
  gem "jekyll-seo-tag"  # Often needed with minimal-mistakes
end


